<% provide(:title, 'CT Freelance Web Developer') %>
<% provide(:description, 'I am a CT based freelance web designer and full stack developer with 18 years of experience') %>
<div class="w-full px-4 pb-24 mx-auto space-y-20 max-w-7xl lg:px-0 lg:space-y-32">
  <div class="flex flex-col w-full md:relative md:aspect-w-86 md:aspect-h-75 lg:aspect-w-37 lg:aspect-h-20 md:block">
    <div class="order-1 md:absolute md:bottom-0 md:left-0 md:z-10 md:max-w-lg ">
      <div class="w-full py-8 bg-white md:p-8 md:absolute md:bottom-0 md:left-0 md:pl-0">
        <h1 class="mb-4 text-h1">Hi, I'm Josh and I love building beautfiul websites.</h1>
        <a href="#about-me" class="inline-flex items-center h-12 text-white uppercase transition-colors duration-200 ease-in-out bg-jb-dk-blue hover:bg-jb-cyan">
          <span class="flex items-center h-full px-5 bg-black bg-opacity-20">
            <svg class="h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16.45 13.01"><path d="M.22,8.45l8,4,8-4" style="fill:none;stroke:#5fb4a2"/><path d="M.22,4.45l8,4,8-4" style="fill:none;stroke:#5fb4a2;isolation:isolate;opacity:0.5"/><path d="M.22.45l8,4,8-4" style="fill:none;stroke:#5fb4a2;isolation:isolate;opacity:0.25"/></svg>
          </span>
          <span class="px-10">
            About Me
          </span>
        </a>
      </div>    
    </div>
    <picture>
      <source 
        srcset="https://res.cloudinary.com/dwjulenau/image/upload/v1634579961/josh-portfolio/homepage/desktop/image-homepage-hero.jpg, 
        https://res.cloudinary.com/dwjulenau/image/upload/v1634579962/josh-portfolio/homepage/desktop/image-homepage-hero_2x.jpg 2x" 
        media="(min-width: 1024px)">
      <source srcset="https://res.cloudinary.com/dwjulenau/image/upload/v1634579961/josh-portfolio/homepage/tablet/image-homepage-hero.jpg, 
        https://res.cloudinary.com/dwjulenau/image/upload/v1634579962/josh-portfolio/homepage/tablet/image-homepage-hero_2x.jpg 2x" 
        media="(min-width: 769px)">
