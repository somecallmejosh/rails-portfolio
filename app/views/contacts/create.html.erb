<% provide(:title, 'Email sent') %>
<% provide(:description, 'Let\'s chat about your next web project.') %>
<div class="w-full px-4 py-4 mx-auto space-y-12 max-w-7xl lg:px-0">
  <div class="container w-full p-4 text-white bg-jb-cyan">
    <% flash.each do |key, message| %>
      <p class="alert alert-<%= key %>"><%= message %></p>
    <% end %>
  </div>

  <div class="text-center">
    <h1 class="mb-2 text-h1">Thank you for your message!</h1>
    <a href="/portfolio" class="btn btn-secondary">Have another look through my portfolio</a>
  </div>
</div>