<div class="max-w-lg mx-auto">
  <h2 class="mb-8 text-h2">Change your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "New password", class: 'font-bold block mb-1' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'w-full h-12 p-4 bg-jb-gray-dk-blue bg-opacity-10'  %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm new password", class: 'font-bold block mb-1' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full h-12 p-4 bg-jb-gray-dk-blue bg-opacity-10'  %>
    </div>

    <div class="actions">
      <button type="submit" class="btn btn-secondary">Change My Password</button>
    </div>
  <% end %>

  <div class="mt-6">
    <%= render "devise/shared/links" %>
  </div>
</div>

