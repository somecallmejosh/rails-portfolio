<% provide(:title, 'Login') %>
<% provide(:description, 'Login to make edits to your website.') %>
<div class="max-w-lg mx-auto">
  <h2 class="mb-8 text-h2">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-8 field">
      <%= f.label :email, class: 'font-bold block mb-1' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full h-12 p-4 bg-jb-gray-dk-blue bg-opacity-10' %>
    </div>

    <div class="mb-8 field">
      <%= f.label :password, class: 'font-bold block mb-1' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'w-full h-12 p-4 bg-jb-gray-dk-blue bg-opacity-10' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-8 field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'font-bold' %>
      </div>
    <% end %>

    <div class="actions">
      <button type="submit" class="btn btn-primary">Log In</button>
    </div>
  <% end %>
  <div class="mt-6">
    <%= render "devise/shared/links" %>
  </div>

</div>
