<% provide(:title, 'Signup') %>
<% provide(:description, 'Signup for this site.') %>

<div class="max-w-lg px-4 mx-auto lg:px-0">
  <h2 class="mb-8 text-h2">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-8 field">
      <%= f.label :email, class: 'font-bold block mb-1' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full h-12 p-4 bg-jb-gray-dk-blue bg-opacity-10' %>
    </div>

    <div class="mb-8 field">
      <%= f.label :password, class: 'font-bold block mb-1' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'w-full h-12 p-4 bg-jb-gray-dk-blue bg-opacity-10' %>
    </div>

    <div class="mb-8 field">
      <%= f.label :password_confirmation, class: 'font-bold block mb-1' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-full h-12 p-4 bg-jb-gray-dk-blue bg-opacity-10' %>
    </div>

    <div class="actions">
      <button type="submit" class="btn btn-primary">Log In</button>
    </div>
  <% end %>

  <div class="mt-6">
    <%= render "devise/shared/links" %>
  </div>
</div>