<% provide(:title, "#{@project.title} Project Details") %>
<% provide(:description, 'Briley Creative Web design and development portfolio') %>
<div class="w-full px-4 py-4 mx-auto space-y-12 max-w-7xl lg:px-0">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @project.title %>
  </p>

  <p>
    <strong>Short description:</strong>
    <%= @project.short_description %>
  </p>

  <p>
    <strong>Long description:</strong>
    <%= @project.long_description %>
  </p>

  <p>
    <strong>Thumbnail one:</strong>
    <%= @project.thumbnail_one %>
  </p>

  <p>
    <strong>Thumbnail two:</strong>
    <%= @project.thumbnail_two %>
  </p>

  <p>
    <strong>Thumbnail three:</strong>
    <%= @project.thumbnail_three %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= @project.image %>
  </p>

  <p>
    <strong>Project url:</strong>
    <%= @project.project_url %>
  </p>

  <p>
    <strong>Role in project:</strong>
    <%= @project.role_in_project %>
  </p>

  <p>
    <strong>Project tech stack:</strong>
    <%= @project.project_tech_stack %>
  </p>

  <%= link_to 'Edit', edit_project_path(@project) %> |
  <%= link_to 'Back', projects_path %>
</div>